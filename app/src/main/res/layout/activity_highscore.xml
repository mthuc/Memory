<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/highscore"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:id="@+id/highScoreTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textColor="#FFF"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="80"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/highScorePlayerOneTextView"
            android:gravity="center"
            android:text="1. Player 1"
            android:layout_margin="10dp"
            android:textColor="#FFF"
            android:textSize="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/highScorePlayerTwoTextView"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="2. Player 2"
            android:textColor="#FFF"
            android:textSize="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/highScorePlayerThreeTextView"
            android:text="3. Player 3"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textColor="#FFF"
            android:textSize="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/highScoreBackButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Return to Main Menu" />

    </LinearLayout>

</LinearLayout>